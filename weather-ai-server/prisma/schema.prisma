generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model WeatherRequest {
  id           String   @id @default(uuid())
  locationRaw  String
  locationName String?
  lat          Float
  lon          Float

  startDate    DateTime
  endDate      DateTime

  weatherData  Json
  aiAdvice     String?
  extraData    Json?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

